    meta(charset='utf-8')
    title zaPOI | Points of interest map
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="#{settings.baseUrl}/stylesheets/bootstrap.css")
    link(rel="stylesheet", href="#{settings.baseUrl}/stylesheets/bootstrap-responsive.css")
    link(rel="stylesheet", href="#{settings.baseUrl}/stylesheets/style.css")

    script(src='#{settings.baseUrl}/javascripts/jquery.js', type="text/javascript")
    script(type='text/javascript').
      var baseUrl = "#{settings.baseUrl}";
      var csrfToken = "#{csrftoken}";
    if (user)
      script(type='text/javascript').
        var user = !{JSON.stringify(user)};
        var CSRF_HEADER = 'X-CSRF-Token';
        $.ajaxPrefilter(function (options, _, xhr) {
          if (!xhr.crossDomain)
            xhr.setRequestHeader(CSRF_HEADER, csrfToken);
        });

