.navbar.navbar-inverse.navbar-static-top
    .navbar-inner
        .container
          button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#{settings.baseUrl}/') POI
          .nav-collapse.collapse
            ul.nav
              li
                a(href='#{settings.baseUrl}/places/add') Add place
            div
              form.navbar-form.pull-left(method='get', action='#{settings.baseUrl}/places/search')
                input.span2(type='text', placeholder='Search for a palce', name='search') 
                input(name='_csrf', type='hidden', value=csrftoken)
                button.btn(type='submit') Go, find it!

            if (user)
              - var email = user.email, _id = user._id, name = user.name
              script(type='text/javascript') window.user = { email: '#{email}', name: '#{name}' };
              ul.nav.pull-right
                li.dropdown
                  a#user-navigation.dropdown-toggle(href='#', data-toggle='dropdown')
                        | #{user.name}
                        b.caret
                      ul.dropdown-menu
                        li
                          a(href='#{settings.baseUrl}/logout') Logout
            if (!user)
              form.navbar-form.pull-right(method='post', action='#{settings.baseUrl}/login')
                input(name='_csrf', type='hidden', value=csrftoken)
                input.span2(name='email', type='text', placeholder='Email', autocomplete='off')
                = ' '
                input.span2(name='password', type='password', placeholder='Password', autocomplete='off')
                = ' '
                button.btn.btn-danger(type='submit') Login
                = ' '
                a.btn.btn-success(href='#{settings.baseUrl}/register') Register
if (typeof(messages) !== 'undefined' && messages.length != 0)
    div.span1
    div.span10.center.alert.alert-danger
      button.close(type='button', data-dismiss='alert') &times;
      each message in messages
        | #{message}
        br
    div.span1
